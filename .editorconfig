root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{ts, json, js}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Ignore paths
[{**/node_modules/**, **/.serverless/**}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
